  <script type="text/javascript">

    function OpenFile()
        {
        try
            {
            // window.alert(event.srcElement.value);
            var FileSystem=new ActiveXObject('Scripting.FileSystemObject');
            var Stream=FileSystem.OpenTextFile(event.srcElement.value,1);
            var Text=Stream.ReadAll();
            Stream.Close();
            document.getElementById('scrstr').value=Text;
            }
        catch (e)
            {
            window.alert('OpenFile: '+e.description);
            }
        }

