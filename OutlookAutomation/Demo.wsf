<package>
    <!--%SystemRoot%\SysWOW64\cscript //nologo Demo.wsf //job:<Job>-->

    <job id='Demo'>
        <!-- Demo "hello world!" -->
        <script language='javascript'>

            var olMailItem=0;
            var olFolderInbox=6;

