                    }
                else
                    {
                    WScript.Echo('Failed to connect to Outlook');
                    }
                }
            catch (e)
                {
                WScript.Echo('main: '+e.description);
                }
            CollectGarbage(); // Force destruction of 'Outlook.Application'

        </script>
    </job>

</package>
